// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id               String    @id @default(cuid())
  name             String?
  email            String?   @unique
  emailVerified    DateTime?
  crypted_password String?
  image            String?
  role             Role?     @relation(fields: [roleId], references: [id])
  roleId           String?
  accounts         Account[]
  sessions         Session[]
}

// 権限ロールテーブル(デフォルトから追加)
model Role {
  id    String @id @default(cuid()) @map("_id")
  name  String @unique
  users User[]

  @@map("roles")
}

model Task {
  id                 String    @id @default(cuid())
  title              String
  is_finish          Boolean
  description        String?
  end_date_scheduled DateTime?
  end_date_actual    DateTime?
}

model Token {
  id        String   @id @default(cuid()) @map("_id") // ID
  type      String   @unique
  token     String?
  createdAt DateTime @default(now()) @map("created_at") // 作成日時(UTC)
  updatedAt DateTime @updatedAt @map("updated_at") // 更新日時(UTC)
}

model Hub {
  id        String   @id @default(cuid()) @map("_id") // ID
  name      String
  createdAt DateTime @default(now()) @map("created_at") // 作成日時(UTC)
  updatedAt DateTime @updatedAt @map("updated_at") // 更新日時(UTC)
}

model Project {
  id        String   @id @default(cuid()) @map("_id") // ID
  name      String // Projectの名前
  hubId     String   @map("hub_id") // HubのID
  hubName   String   @map("hub_name") // Hubの名前
  createdAt DateTime @default(now()) @map("created_at") // 作成日時(UTC)
  updatedAt DateTime @updatedAt @map("updated_at") // 更新日時(UTC)
}

model apsContent {
  id        String   @id @default(cuid()) @map("_id") // ID
  projectId String   @map("project_id") // ProjectのID
  parentId  String   @map("parent_id") // 親アイテムのID
  name      String // アイテムの名前
  kind      String // アイテムのタイプ
  createdAt DateTime @default(now()) @map("created_at") // 作成日時(UTC)
  updatedAt DateTime @updatedAt @map("updated_at") // 更新日時(UTC)

  @@map("aps_contents")
}
